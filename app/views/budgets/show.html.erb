
<div class="container">
  <div class="jumbotron" id="monthly">
    <div class="container">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Monthly Budgets
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <% @current_year_budgets.each do |b| %>
          <li><a href=<%= "/budgets/#{b.id}" %>><%= b.budget_date.strftime("%B, %Y") %></a></li>
          <% end %>
        </ul>
      </div>
      <%= render "/users/monthly_progress" %>
      <%= link_to 'Create new budget', "/budgets/new" %>
      <%= link_to 'Edit Budget', "/budgets/#{params[:id]}/edit" %>
      <%= link_to 'Show Expenses', "/budgets/#{params[:id]}/expenses" %>
    </div>
  </div>
  <div class="jumbotron" id="annual">
    <div class="container">
      <%= render "/users/annual_progress" %>
    </div>
  </div>

</div>
