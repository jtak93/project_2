<%= form_for @new_budget do |f| %>
<% if @new_budget.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @new_budget.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :budget %>
  <%= f.number_field :budget, :class => 'text_field', :step => 0.01 %>
</div>
<div class="field">
  <%= f.label :budget_date %>
  <%= f.date_select :budget_date, discard_day: true %>
</div>
<div class="actions"><%= f.submit "Create" %></div>
<% end %>
