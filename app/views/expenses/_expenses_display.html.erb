<div class="container">
  <% @sum = 0 %>
  <% @expenses.each do |e| %>
    <p>
      Expense id: <%= e.id %>
      &nbsp;&nbsp; | &nbsp;&nbsp;
      <%= e.amount %>
      &nbsp;&nbsp; | &nbsp;&nbsp;
      <%= e.expense_category[:expense_category] %>
      &nbsp;&nbsp; | &nbsp;&nbsp;
      <%= link_to 'Edit Expense', "/budgets/#{params[:id]}/expenses/#{e.id}/edit" %>
      <%= link_to 'Destroy', "/budgets/#{params[:id]}/expenses/#{e.id}", method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
    <% @sum += e.amount %>
  <% end %>
  <p>
    Sum:
    &nbsp;&nbsp; | &nbsp;&nbsp;
    <%= @sum %>
  </p>
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#createExpenseModal">Create Expense</button>
  <!-- Modal -->
  <div id="createExpenseModal" class="modal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create Expense</h4>
        </div>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>

</div>

